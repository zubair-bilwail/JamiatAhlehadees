@model IEnumerable<CommonLayer.CommonModels.NewMadarsaOperation>

@{
    ViewBag.Title = "Index";
}

<div class="box-header with-border">
    <h3 class="box-title">New Madarsa  Index</h3>
</div>
<br />
<div class="col-lg-12">
    <button value="Create New"
            class="btn btn-info btn-sm" type="button" id="addressSearch"
            onclick="location.href='@Url.Action("Create")'">
        Create New
    </button>


    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <td>Id</td>
                <td>Head Master</td>
                <td>Expected Student</td>
                <td>Boys</td>
                <td>Girls</td>
                <td>Teachers</td>
                <td>Monthly Cost</td>
                <td>Source Of Revenue</td>
                <td>Location</td>
                <td>Address</td>
                <td>TotalLandArea</td>
                <td>Constructed Area</td>
                <td>Charging Student</td>
                <td>How Much</td>
                <td>User Name</td>
                <td>Committee Name</td>
                <td>Edit</td>
                <td>Details</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.HeadMasterName</td>
                    <td>@item.ExpectedStudents</td>
                    <td>@item.Boys</td>
                    <td>@item.Girls</td>
                    <td>@item.Teachers</td>
                    <td>@item.MonthlyCost</td>
                    <td>@item.SourceofRevenue</td>
                    <td>@item.Location</td>
                    <td>@item.Address</td>
                    <td>@item.TotalLandArea</td>
                    <td>@item.ConstructedArea</td>
                    <td>@item.ChargingStudent</td>
                    <td>@item.Howmuch</td>
                    <td>@item.Name</td>
                    <td>@item.CommitteeName</td>
                    <td>
                        <button value="Edit"
                                class="btn btn-info btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Create", "NewMadarsa", new { id = item.Id })'">
                            Edit
                        </button>
                    </td>
                    <td>
                        <button value="Details"
                                class="btn btn-primary btn-primary" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Details", "NewMadarsa" ,new {id = item.Id })'">
                            Details
                        </button>
                    </td>
                    <td>
                        <button value="Delete"
                                class="btn btn btn-danger btn-sm" type="button" id="addressSearch"
                                onclick="location.href='@Url.Action("Delete", "NewMadarsa", new { id = item.Id })'">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
